<!DOCTYPE html>
<html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Oleo+Script&display=swap" rel="stylesheet">
      <link rel="stylesheet" href="public/css/profile.css">
      
      <title></title>
  </head>
  <body>
    
      <h1 id="header"> My Personal Thoughts </h1>
    
      <h2 class="words"> Welcome back <%= user.userName %> </h2>
      
    
      <div class="info">
          <p><strong>User Name</strong>: <%= user.userName %></p>
          <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
      </div>
        
      <div>
          <h3> Express Yourself</h3>
          <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="">
                <label for="title" class="label">Title:</label>
                <input type="text" class="form-control" id="title" name="title">
              </div>
              
              <div>
                <label for="body" class="label">Body:</label>
                <textarea class="form-control" id="caption" name="body"></textarea>
              </div>
            
            <div class="">
              <label for="imgUpload" class="label">Image:</label>
              <input type="file" class="form-control" id="imageUpload" name="file">
            </div>
            <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
          </form>
      </div>
        
        
      <div>
          <h1 class="post"> My Feelings </h1>
      <div>
        
          <div class="container">
            <ul class="column">
              <% for(var i=0; i<posts.length; i++) {%>
                <li class="">
                  <span> <%= posts[i].title %> </span>
                    <p> <%= posts[i].body %> <p>
                      <span> <%= posts[i].createdAt %> </span>
                        <img class="img-fluid" src="<%= posts[i].image%>">
                </li>
              <% } %>
              </ul>
          </div>  
              
      <footer><a href="/feed"> Return to feed </a></footer>
              
          
                
        
        
    
    

      
      
  </body>
</html>
